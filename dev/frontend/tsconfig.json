{
      "compilerOptions": {
            "target": "ESNext",
            "module": "ESNext",
            "moduleResolution": "node",
            "jsx": "react-jsx",
            "outDir": "../src/main/resources/static/js/",
            "rootDir": "./",
            "baseUrl": ".",
            "paths": {
                  "@/*": ["src/*"]
            },
            "esModuleInterop": true,
            "allowSyntheticDefaultImports": true,
            "strict": true,
            "forceConsistentCasingInFileNames": true,
            "skipLibCheck": true
      },
      "include": ["**/*.ts", "**/*.tsx"],
      "exclude": ["node_modules"]
}
